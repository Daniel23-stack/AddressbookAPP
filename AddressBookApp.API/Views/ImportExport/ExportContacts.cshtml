@{
    ViewData["Title"] = "Export Contacts";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Export Contacts</h1>
            <p class="lead">Export your contacts to a CSV file.</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Export Options</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ExportContacts" method="post">
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="clientsOnly" id="allContacts" value="false" checked>
                                <label class="form-check-label" for="allContacts">
                                    Export All Contacts
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="clientsOnly" id="clientsOnly" value="true">
                                <label class="form-check-label" for="clientsOnly">
                                    Export Clients Only
                                </label>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Export to CSV</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Export Information</h5>
                </div>
                <div class="card-body">
                    <p>The exported CSV file will contain the following information:</p>
                    <ul>
                        <li>First Name</li>
                        <li>Last Name</li>
                        <li>Company</li>
                        <li>Email (primary)</li>
                        <li>Phone (primary)</li>
                        <li>Client Status</li>
                        <li>Notes</li>
                    </ul>
                    <p class="mb-0">The file will be named with the current date and time.</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col">
            <a asp-action="Index" class="btn btn-secondary">Back to Import/Export</a>
        </div>
    </div>
</div>
