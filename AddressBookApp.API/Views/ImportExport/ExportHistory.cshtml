@model IEnumerable<AddressBookApp.Application.DTOs.DataExportDto>

@{
    ViewData["Title"] = "Export History";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Export History</h1>
            <p class="lead">View the history of your contact exports.</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Export History</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <p class="text-center">No export history found.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>File Name</th>
                                        <th>Record Count</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var export in Model.OrderByDescending(e => e.ExportedAt))
                                    {
                                        <tr>
                                            <td>@export.ExportedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>@export.FileName</td>
                                            <td>@export.RecordCount</td>
                                            <td>@export.ExportType</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col">
            <a asp-action="Index" class="btn btn-secondary">Back to Import/Export</a>
        </div>
    </div>
</div>
