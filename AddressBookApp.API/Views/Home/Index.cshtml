﻿﻿﻿@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Address Book App</h1>
    <p>A simple application to manage your contacts.</p>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="mt-4">
            <a href="/Dashboard" class="btn btn-success me-2">Go to Dashboard</a>
            <a asp-controller="Home" asp-action="Contacts" class="btn btn-primary">View Contacts</a>
        </div>
    }
    else
    {
        <div class="mt-4">
            <a href="/Account/Login" class="btn btn-primary me-2">Login</a>
            <a href="/Account/Register" class="btn btn-outline-primary">Register</a>
        </div>
    }
</div>
